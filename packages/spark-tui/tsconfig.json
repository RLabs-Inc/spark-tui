{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2024", "dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./ts/*"]
    }
  },
  "include": ["ts/**/*.ts", "examples/**/*.ts"],
  "exclude": ["node_modules", "dist", "rust"]
}
